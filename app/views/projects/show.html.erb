<h1><%= @project.title %></h1><br>

<h5>Style: <%= @project.style.camelcase %></h5><br>

<h5>Tools used:</h5><br>
    <ul>
    <% @project.tools.each do |tool|%>
        <%= tool.brand %> <%= link_to tool.name, project_projects_tool_path(@project, tool) %><br>
    <% end %>
    </ul>
<%= link_to "Add a Tool", new_project_projects_tool_path(@project) %><br>

<% if @project.photo.attached? %>
    <image class="resize" src="<%= (url_for(@project.photo)) %>">
<% end %>
<br>
<%= link_to "Edit Project", edit_user_project_path(@project) %><br>
<%= button_to "Delete Project", user_project_path(@project), method: :delete %>
